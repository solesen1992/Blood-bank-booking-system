<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Specifies the character set for the HTML document -->
    <meta charset="utf-8" />
    <!-- Ensures the webpage is properly displayed on various devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Sets the title of the webpage -->
    <title>@ViewData["Title"] - MVC_Webserver</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_Webserver.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header section with navigation bar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <!-- Logo with a link back to the home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/DonerBlodNuLogo.jpg" alt="Logo" class="logo-img me-2" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Toggle button for navigation menu in mobile view -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
                        <!-- Link to the home page, with conditional class for active state -->
                        <li class="nav-item">
                            <!-- The link uses a conditional class to highlight the current navigation item.
                            If the current action matches "Index", the "active" class is applied,
                            allowing for customized styling in the CSS. -->
							<a class="nav-link text-dark @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
							   asp-area="" asp-controller="Home" asp-action="Index">Forside</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")"
							   asp-area="" asp-controller="Donor" asp-action="Create">Registrer Donor</a>
						</li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")"
                               asp-area="" asp-controller="Account" asp-action="Login">Log ind</a>
                        </li>
						<li class="nav-item">
							<a class="nav-link text-dark @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
							   asp-area="" asp-controller="Home" asp-action="Privacy">Privatlivspolitik</a>
						</li>
					</ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Main content container -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Placeholder for rendering specific content for the page -->
        </main>
    </div>

    <!-- Footer section -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <!-- Copyright and link to privacy policy page -->
            &copy; 2024 - MVC_Webserver - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Scripts for jQuery, Bootstrap, and custom site functionality -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
